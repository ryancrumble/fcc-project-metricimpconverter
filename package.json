{
	"name": "fcc-imperial-metric-converter-boilerplate",
	"version": "1.0.0",
	"description": "Metric / Imperial Unit Converter",
	"main": "src/server.ts",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "PORT=3000 node dist/server.js",
		"dev": "concurrently \"yarn tsc --watch\" \"PORT=3000 nodemon -q dist/server.js\"",
		"test": "env TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha --require ts-node/register 'src/test/**/*.ts'"
	},
	"dependencies": {
		"chai": "^4.3.7",
		"chai-http": "^4.3.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"mocha": "^10.2.0"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/chai-http": "^4.2.0",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.15",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"concurrently": "^7.6.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"nodemon": "^2.0.20",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/freeCodeCamp/boilerplate-project-metricimpconverter"
	},
	"keywords": [
		"node",
		"freeCodeCamp",
		"express"
	],
	"license": "MIT"
}
